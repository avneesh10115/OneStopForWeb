<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>OneStop for Web - Home</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    /* Slideshow container */
    .slideshow-container {
      position: relative;
      max-width: 1200px; /* Set to your target width */
      margin: 20px auto;
      overflow: hidden;
    }
    
    /* Each slide is hidden by default */
    .slide {
      display: none;
      position: relative;
    }
    
    /* Slide image styling - Fixed size 1200x700 */
    .slide img {
      width: 1200px;
      height: 700px;
      object-fit: cover;
      display: block;
      margin: 0 auto;
    }
    
    /* Slide heading overlay styling */
    .slide-heading {
      position: absolute;
      bottom: 20px;
      left: 30px;
      padding: 10px 15px;
      background: rgba(0, 0, 0, 0.6);
      color: #fff;
      font-size: 2em;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6);
      border-radius: 5px;
    }
    
    /* Navigation arrows */
    .prev, .next {
      cursor: pointer;
      position: absolute;
      top: 50%;
      width: auto;
      margin-top: -20px;
      padding: 16px;
      color: white;
      font-weight: bold;
      font-size: 20px;
      transition: background-color 0.3s ease;
      user-select: none;
      background: rgba(0, 0, 0, 0.6);
      border-radius: 0 3px 3px 0;
      z-index: 100;
    }
    
    .next {
      right: 0;
      border-radius: 3px 0 0 3px;
    }
    
    .prev:hover, .next:hover {
      background: rgba(0, 0, 0, 0.8);
    }
    
    /* Responsive adjustments: For screens narrower than 1200px, let images scale */
    @media (max-width: 1200px) {
      .slide img {
        width: 100%;
        height: auto;
      }
    }
  </style>
  <script>
    // Updated JavaScript for slideshow functionality with arrow wrapping
    let slideIndex = 0;
    function showSlide(index) {
      let slides = document.getElementsByClassName("slide");
      const totalSlides = slides.length;
      if (totalSlides === 0) return;
      // Use modulo arithmetic to cycle slides.
      slideIndex = ((index % totalSlides) + totalSlides) % totalSlides;
      for (let i = 0; i < totalSlides; i++) {
        slides[i].style.display = "none";
      }
      slides[slideIndex].style.display = "block";
    }
    
    // Change slide by n
    function plusSlides(n) {
      showSlide(slideIndex + n);
    }
    
    // Auto slide every 4 seconds.
    function autoSlide() {
      plusSlides(1);
    }
    
    window.onload = function() {
      showSlide(slideIndex);
      setInterval(autoSlide, 4000);
    };
  </script>
</head>
<body>
  <%- include('inc/header', { page: 'home' }) %>
  
  <div class="container">
    <!-- Slideshow Section -->
    <div class="slideshow-container" id="slideshow">
      <% 
         // Global slides array: update image paths and headings as needed.
         const slides = [
           { image: '/images/slide1.jpg', heading: 'Welcome to OneStop for Web' },
           { image: '/images/slide2.jpg', heading: 'Summer Holidays on the horizon!' },
           { image: '/images/slide3.jpg', heading: 'NSS Events Concluded.' },
           { image: '/images/slide4.jpg', heading: 'Shop & Trade with Ease' },
           { image: '/images/slide5.jpg', heading: 'Hottest Summer in Asia to be recorded in India coming June.' }
         ];
         slides.forEach(function(slide, index) { 
      %>
        <div class="slide" data-index="<%= index %>">
          <img src="<%= slide.image %>" alt="Slide <%= index + 1 %>">
          <div class="slide-heading"><%= slide.heading %></div>
        </div>
      <% }); %>
      <!-- Navigation arrows -->
      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
  </div>
  
  <p>&copy; <%= new Date().getFullYear() %> OneStop for Web</p>
</body>
</html>
